<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Teacher.teacherreg_Activity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="600sp"
        android:layout_marginLeft="20sp"
        android:layout_marginTop="50sp"
        android:layout_marginRight="20sp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Teacher Registration"
            android:textSize="25sp"
            android:textStyle="bold"
            android:typeface="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:text="Signup to continue"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/Ftea_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:hint="First Name" />

        <EditText
            android:id="@+id/Ltea_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:hint="Last Name" />

        <EditText
            android:id="@+id/Usertea_Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:hint="User Name" />


        <EditText
            android:id="@+id/Utea_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:hint="Enter Email ID"
            android:inputType="textEmailAddress" />

        <EditText
            android:id="@+id/rtea_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:hint="Enter Password"
            android:inputType="textPassword" />

        <Button
            android:id="@+id/tea_Register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10sp"
            android:layout_marginTop="10sp"
            android:layout_marginEnd="10sp"
            android:text="Sign Up Now" />

        <TextView
            android:id="@+id/sign_reg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10sp"
            android:text="Already registered? Sign In"
            android:textColor="@color/teal_200"
            android:textSize="18sp"
            android:textStyle="bold" />
        <ProgressBar
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:id="@+id/prbar"
            android:progress="0"

            android:visibility="invisible"
            style="?android:attr/progressBarStyleLarge"
            />

    </LinearLayout>
</LinearLayout>